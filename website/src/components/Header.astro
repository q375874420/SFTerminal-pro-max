---
import { useTranslations, getAlternateLang, getAlternateUrl, type Lang } from '../i18n/utils';
import { defaultLanguage } from '../i18n/translations';

interface Props {
  lang?: Lang;
}

const { lang = defaultLanguage } = Astro.props;
const t = useTranslations(lang);
const alternateLang = getAlternateLang(lang);
const alternateUrl = getAlternateUrl(Astro.url, alternateLang);
---

<header class="header">
  <div class="container header-inner">
    <a href={lang === 'zh' ? '/' : '/en/'} class="logo">
      <img src="/favicon.ico" alt={t.common.brandName} class="logo-img" />
      <span class="logo-text">{t.common.brandName}</span>
    </a>
    
    <nav class="nav">
      <a href="#features" class="nav-link">{t.nav.features}</a>
      <a href="#download" class="nav-link">{t.nav.download}</a>
      <a href="https://github.com/ysyx2008/SFTerminal" target="_blank" rel="noopener" class="nav-link">
        <svg class="icon-github" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        {t.nav.github}
      </a>
    </nav>
    
    <div style="display: flex; align-items: center; gap: 12px;">
      <a href={alternateUrl} class="lang-switcher" data-lang={alternateLang}>
        {alternateLang === 'en' ? 'EN' : 'ä¸­'}
      </a>
      <a href="#download" class="btn btn-primary header-cta">{t.nav.cta}</a>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 16px 0;
    background: rgba(10, 14, 23, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--color-text-primary);
    font-weight: 600;
    font-size: 18px;
  }
  
  .logo:hover {
    color: var(--color-text-primary);
  }
  
  .logo-img {
    width: 36px;
    height: 36px;
    border-radius: 8px;
  }
  
  .nav {
    display: flex;
    align-items: center;
    gap: 32px;
  }
  
  .nav-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--color-text-secondary);
    font-size: 15px;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--color-text-primary);
  }
  
  .icon-github {
    opacity: 0.8;
  }
  
  .header-cta {
    padding: 10px 20px;
    font-size: 14px;
  }
  
  .lang-switcher {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px 14px;
    color: var(--color-text-secondary);
    font-size: 14px;
    font-weight: 500;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-bg-tertiary);
    transition: all 0.2s ease;
  }
  
  .lang-switcher:hover {
    color: var(--color-text-primary);
    border-color: var(--color-border-hover);
    background: var(--color-bg-card);
  }
  
  @media (max-width: 768px) {
    .nav {
      display: none;
    }
    
    .logo-text {
      display: none;
    }
  }
</style>

