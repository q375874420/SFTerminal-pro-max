<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const GITHUB_API_URL = 'https://api.github.com/repos/ysyx2008/SFTerminal/releases';

  // è·å–é¡µé¢è¯­è¨€
  const statsSection = document.getElementById('stats');
  const lang = statsSection?.dataset.lang || 'zh';
  const isZh = lang === 'zh';

  // ç¿»è¯‘æ–‡æœ¬
  const texts = {
    latest: isZh ? 'æœ€æ–°' : 'Latest',
    preview: isZh ? 'é¢„è§ˆ' : 'Preview',
    downloads: isZh ? 'ä¸‹è½½' : 'downloads',
    other: isZh ? 'å…¶ä»–' : 'Other',
    errorMessage: isZh ? 'æ— æ³•åŠ è½½æ•°æ®ï¼Œè¯·ç¨åé‡è¯•' : 'Failed to load data, please try again later',
    cumulativeDownloads: isZh ? 'ç´¯è®¡ä¸‹è½½é‡' : 'Cumulative Downloads',
  };

  interface Asset {
    name: string;
    download_count: number;
    browser_download_url: string;
  }

  interface Release {
    tag_name: string;
    name: string;
    published_at: string;
    prerelease: boolean;
    assets: Asset[];
  }

  function formatNumber(num: number): string {
    if (num >= 1000) {
      return (num / 1000).toFixed(1) + 'k';
    }
    return num.toLocaleString();
  }

  function formatDate(dateString: string): string {
    const date = new Date(dateString);
    return date.toLocaleDateString(isZh ? 'zh-CN' : 'en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  }

  function getPlatformFromAsset(name: string): 'macos' | 'windows' | 'linux' | 'other' {
    const lowerName = name.toLowerCase();
    if (lowerName.includes('.dmg') || lowerName.includes('mac') || lowerName.includes('darwin')) {
      return 'macos';
    }
    if (lowerName.includes('.exe') || lowerName.includes('win') || lowerName.includes('setup')) {
      return 'windows';
    }
    if (lowerName.includes('.appimage') || lowerName.includes('.deb') || lowerName.includes('.rpm') || lowerName.includes('linux')) {
      return 'linux';
    }
    return 'other';
  }

  async function fetchReleases() {
    try {
      const response = await fetch(GITHUB_API_URL);
      if (!response.ok) {
        throw new Error('Failed to fetch releases');
      }
      const releases: Release[] = await response.json();
      return releases;
    } catch (error) {
      console.error('Error fetching releases:', error);
      throw error;
    }
  }

  let chartInstance: any = null;

  function renderChart(releases: Release[]) {
    const canvas = document.getElementById('downloads-chart') as HTMLCanvasElement;
    const chartLoading = document.getElementById('chart-loading');
    
    if (!canvas) return;

    // æŒ‰å‘å¸ƒæ—¶é—´æ’åºï¼ˆä»æ—©åˆ°æ™šï¼‰
    const sortedReleases = [...releases].sort((a, b) => 
      new Date(a.published_at).getTime() - new Date(b.published_at).getTime()
    );

    // è®¡ç®—ç´¯è®¡ä¸‹è½½é‡
    let cumulative = 0;
    const chartData = sortedReleases.map(release => {
      const releaseDownloads = release.assets.reduce((sum, asset) => sum + asset.download_count, 0);
      cumulative += releaseDownloads;
      return {
        date: new Date(release.published_at),
        version: release.tag_name,
        downloads: releaseDownloads,
        cumulative: cumulative
      };
    });

    // é”€æ¯æ—§å›¾è¡¨
    if (chartInstance) {
      chartInstance.destroy();
    }

    // éšè—åŠ è½½çŠ¶æ€
    if (chartLoading) {
      chartLoading.classList.add('hidden');
    }

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // è·å–CSSå˜é‡é¢œè‰²
    const computedStyle = getComputedStyle(document.documentElement);
    const accentColor = '#06b6d4'; // cyan-500
    const textColor = computedStyle.getPropertyValue('--color-text-secondary').trim() || '#94a3b8';
    const gridColor = computedStyle.getPropertyValue('--color-border').trim() || 'rgba(148, 163, 184, 0.1)';

    chartInstance = new (window as any).Chart(ctx, {
      type: 'line',
      data: {
        labels: chartData.map(d => d.version),
        datasets: [{
          label: texts.cumulativeDownloads,
          data: chartData.map(d => d.cumulative),
          borderColor: accentColor,
          backgroundColor: 'rgba(6, 182, 212, 0.1)',
          borderWidth: 3,
          fill: true,
          tension: 0.4,
          pointRadius: 6,
          pointBackgroundColor: accentColor,
          pointBorderColor: '#0f172a',
          pointBorderWidth: 2,
          pointHoverRadius: 8,
          pointHoverBackgroundColor: accentColor,
          pointHoverBorderColor: '#fff',
          pointHoverBorderWidth: 2,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          intersect: false,
          mode: 'index',
        },
        plugins: {
          legend: {
            display: false,
          },
          tooltip: {
            backgroundColor: 'rgba(15, 23, 42, 0.95)',
            titleColor: '#fff',
            bodyColor: '#94a3b8',
            borderColor: 'rgba(6, 182, 212, 0.3)',
            borderWidth: 1,
            padding: 12,
            cornerRadius: 8,
            displayColors: false,
            callbacks: {
              title: (items: any) => {
                if (items.length > 0) {
                  const idx = items[0].dataIndex;
                  const data = chartData[idx];
                  return `${data.version} - ${formatDate(data.date.toISOString())}`;
                }
                return '';
              },
              label: (item: any) => {
                const idx = item.dataIndex;
                const data = chartData[idx];
                return [
                  `${texts.cumulativeDownloads}: ${formatNumber(data.cumulative)}`,
                  `${isZh ? 'æœ¬ç‰ˆæœ¬' : 'This version'}: +${formatNumber(data.downloads)}`
                ];
              }
            }
          }
        },
        scales: {
          x: {
            grid: {
              color: gridColor,
              drawBorder: false,
            },
            ticks: {
              color: textColor,
              font: {
                family: "'JetBrains Mono', monospace",
                size: 11,
              },
              maxRotation: 45,
              minRotation: 0,
            }
          },
          y: {
            beginAtZero: true,
            grid: {
              color: gridColor,
              drawBorder: false,
            },
            ticks: {
              color: textColor,
              font: {
                family: "'JetBrains Mono', monospace",
                size: 11,
              },
              callback: (value: number) => formatNumber(value)
            }
          }
        }
      }
    });
  }

  function renderReleases(releases: Release[]) {
    const releasesList = document.getElementById('releases-list');
    if (!releasesList) return;

    // æ¸²æŸ“æŠ˜çº¿å›¾
    renderChart(releases);

    // è®¡ç®—ç»Ÿè®¡æ•°æ®
    let totalDownloads = 0;
    const platformCounts = { macos: 0, windows: 0, linux: 0 };

    releases.forEach(release => {
      release.assets.forEach(asset => {
        totalDownloads += asset.download_count;
        const platform = getPlatformFromAsset(asset.name);
        if (platform !== 'other') {
          platformCounts[platform] += asset.download_count;
        }
      });
    });

    // æ›´æ–°æ€»ä½“ç»Ÿè®¡
    const totalDownloadsEl = document.getElementById('total-downloads');
    const totalReleasesEl = document.getElementById('total-releases');
    const latestVersionEl = document.getElementById('latest-version');

    if (totalDownloadsEl) totalDownloadsEl.textContent = formatNumber(totalDownloads);
    if (totalReleasesEl) totalReleasesEl.textContent = releases.length.toString();
    if (latestVersionEl && releases.length > 0) {
      latestVersionEl.textContent = releases[0].tag_name;
    }

    // æ›´æ–°å¹³å°ç»Ÿè®¡
    const maxPlatformCount = Math.max(...Object.values(platformCounts));
    
    Object.entries(platformCounts).forEach(([platform, count]) => {
      const countEl = document.getElementById(`${platform}-count`);
      const barEl = document.getElementById(`${platform}-bar`);
      
      if (countEl) countEl.textContent = formatNumber(count);
      if (barEl) {
        const percentage = maxPlatformCount > 0 ? (count / maxPlatformCount) * 100 : 0;
        barEl.style.width = `${percentage}%`;
      }
    });

    // æ¸²æŸ“ç‰ˆæœ¬åˆ—è¡¨
    releasesList.innerHTML = releases.map((release, index) => {
      const releaseDownloads = release.assets.reduce((sum, asset) => sum + asset.download_count, 0);
      const isLatest = index === 0;
      
      // æŒ‰å¹³å°åˆ†ç»„èµ„æº
      const assetsByPlatform: Record<string, { count: number; downloads: number }> = {};
      release.assets.forEach(asset => {
        const platform = getPlatformFromAsset(asset.name);
        if (!assetsByPlatform[platform]) {
          assetsByPlatform[platform] = { count: 0, downloads: 0 };
        }
        assetsByPlatform[platform].count++;
        assetsByPlatform[platform].downloads += asset.download_count;
      });

      const platformLabels: Record<string, string> = {
        macos: 'macOS',
        windows: 'Windows',
        linux: 'Linux',
        other: texts.other
      };

      const platformIcons: Record<string, string> = {
        macos: 'ğŸ',
        windows: 'ğŸªŸ',
        linux: 'ğŸ§',
        other: 'ğŸ“¦'
      };

      return `
        <div class="release-card ${isLatest ? 'latest' : ''}">
          <div class="release-info">
            <div class="release-title">
              <span class="release-version">${release.tag_name}</span>
              ${isLatest ? `<span class="release-badge">${texts.latest}</span>` : ''}
              ${release.prerelease ? `<span class="release-badge preview">${texts.preview}</span>` : ''}
            </div>
            <span class="release-date">${formatDate(release.published_at)}</span>
          </div>
          <div class="release-assets">
            ${Object.entries(assetsByPlatform)
              .filter(([_, data]) => data.downloads > 0)
              .sort((a, b) => b[1].downloads - a[1].downloads)
              .map(([platform, data]) => `
                <span class="asset-tag">
                  <span class="asset-icon">${platformIcons[platform]}</span>
                  <span class="asset-name">${platformLabels[platform]}</span>
                  <span class="asset-count">${formatNumber(data.downloads)}</span>
                </span>
              `).join('')}
          </div>
          <div class="release-total">
            <div class="release-total-value">${formatNumber(releaseDownloads)}</div>
            <div class="release-total-label">${texts.downloads}</div>
          </div>
        </div>
      `;
    }).join('');
  }

  function showError() {
    const releasesList = document.getElementById('releases-list');
    if (releasesList) {
      releasesList.innerHTML = `
        <div class="error-state">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="48" height="48">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
          <span>${texts.errorMessage}</span>
        </div>
      `;
    }
  }

  // åˆå§‹åŒ–
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const releases = await fetchReleases();
      renderReleases(releases);
    } catch (error) {
      showError();
    }
  });
</script>

