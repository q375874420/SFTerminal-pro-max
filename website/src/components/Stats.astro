<style>
  .stats-section {
    padding: 140px 0 80px;
    min-height: 100vh;
    position: relative;
    background: var(--gradient-hero);
  }

  .stats-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(148, 163, 184, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(148, 163, 184, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
  }

  .stats-header {
    text-align: center;
    margin-bottom: 48px;
  }

  /* æ€»ä½“ç»Ÿè®¡å¡ç‰‡ */
  .stats-summary {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 64px;
  }

  .summary-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 32px;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .summary-card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow);
  }

  .summary-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .summary-icon svg {
    width: 28px;
    height: 28px;
  }

  .total-downloads .summary-icon {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(59, 130, 246, 0.2));
    color: var(--color-accent-primary);
  }

  .total-releases .summary-icon {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
    color: var(--color-accent-tertiary);
  }

  .latest-version .summary-icon {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(6, 182, 212, 0.2));
    color: #22c55e;
  }

  .summary-content {
    display: flex;
    flex-direction: column;
  }

  .summary-value {
    font-size: 36px;
    font-weight: 700;
    font-family: var(--font-mono);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .summary-label {
    font-size: 14px;
    color: var(--color-text-secondary);
    margin-top: 4px;
  }

  /* ä¸‹è½½è¶‹åŠ¿å›¾ */
  .trend-section {
    margin-bottom: 64px;
  }

  .chart-container {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 24px;
    backdrop-filter: blur(10px);
    position: relative;
    min-height: 320px;
  }

  .chart-container canvas {
    width: 100% !important;
    height: 280px !important;
  }

  .chart-loading {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-card);
    border-radius: var(--radius-lg);
    z-index: 10;
  }

  .chart-loading.hidden {
    display: none;
  }

  /* å¹³å°ç»Ÿè®¡ */
  .platform-stats {
    margin-bottom: 64px;
  }

  .subsection-title {
    font-size: 24px;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .subsection-title::before {
    content: '';
    width: 4px;
    height: 24px;
    background: var(--gradient-primary);
    border-radius: 2px;
  }

  .platform-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .platform-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 24px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .platform-card:hover {
    border-color: var(--color-border-hover);
  }

  .platform-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
  }

  .platform-icon svg {
    width: 28px;
    height: 28px;
  }

  .platform-icon.macos {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    color: var(--color-text-primary);
  }

  .platform-icon.windows {
    background: linear-gradient(135deg, rgba(0, 120, 212, 0.2), rgba(0, 120, 212, 0.1));
    color: #0078d4;
  }

  .platform-icon.linux {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.2), rgba(255, 152, 0, 0.1));
    color: #ffc107;
  }

  .platform-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .platform-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .platform-count {
    font-size: 20px;
    font-weight: 700;
    font-family: var(--font-mono);
    color: var(--color-accent-primary);
  }

  .platform-bar {
    height: 8px;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    overflow: hidden;
  }

  .platform-bar-fill {
    height: 100%;
    border-radius: 4px;
    transition: width 0.8s ease;
    width: 0%;
  }

  .platform-card[data-platform="macos"] .platform-bar-fill {
    background: linear-gradient(90deg, #64748b, #94a3b8);
  }

  .platform-card[data-platform="windows"] .platform-bar-fill {
    background: linear-gradient(90deg, #0078d4, #00a2ed);
  }

  .platform-card[data-platform="linux"] .platform-bar-fill {
    background: linear-gradient(90deg, #ffc107, #ff9800);
  }

  /* ç‰ˆæœ¬åˆ—è¡¨ */
  .releases-section {
    margin-bottom: 48px;
  }

  .releases-list {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  /* åŠ¨æ€ç”Ÿæˆçš„å†…å®¹éœ€è¦ä½¿ç”¨ :global */
  .releases-list :global(.release-card) {
    display: grid;
    grid-template-columns: 140px 1fr 100px;
    align-items: center;
    gap: 24px;
    padding: 20px 24px;
    border-bottom: 1px solid var(--color-border);
    transition: background 0.2s ease;
  }

  .releases-list :global(.release-card:last-child) {
    border-bottom: none;
  }

  .releases-list :global(.release-card:hover) {
    background: rgba(6, 182, 212, 0.03);
  }

  .releases-list :global(.release-card.latest) {
    background: rgba(6, 182, 212, 0.05);
  }

  .releases-list :global(.release-info) {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

