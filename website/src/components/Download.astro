---

<section id="download" class="download">
  <div class="container">
    <h2 class="section-title fade-in">{t.download.title}</h2>
    <p class="section-subtitle fade-in fade-in-delay-1">
      {t.download.subtitle}
    </p>
    
    <div class="download-grid">
      {downloads.map((item, index) => (
        <div class={`download-card fade-in fade-in-delay-${index + 2}`}>
          <div class="download-header">
            <div class="download-icon" set:html={item.icon} />
            <div>
              <h3 class="download-platform">{item.platform}</h3>
              <p class="download-desc">{item.description}</p>
            </div>
          </div>
          <div class="download-variants">
            {item.variants.map(variant => (
              <a href={`https://github.com/ysyx2008/SFTerminal/releases/download/v${version}/${variant.file}`} class="download-btn" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"/>
                </svg>
                {variant.name}
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="download-note fade-in">
      <p>
        <strong>{t.download.systemRequirements}</strong>macOS 10.15+ / Windows 10+, Server 2016+ / Linux (glibc 2.17+)
      </p>
      <p>
        {t.download.moreVersions} <a href="https://github.com/ysyx2008/SFTerminal/releases" target="_blank" rel="noopener">{t.download.githubReleases}</a>
      </p>
    </div>
  </div>
</section>

<style>
  .download {
    position: relative;
    padding: var(--spacing-section) 0;
    background: var(--color-bg-primary);
  }
  
  .download::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }
  
  .download-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-bottom: 48px;
  }
  
  .download-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 28px;
    transition: all 0.3s ease;
  }
  
  .download-card:hover {
    border-color: var(--color-border-hover);
  }
  
  .download-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
  }
  
  .download-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
  }
  
  .download-platform {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 4px;
  }
  
  .download-desc {
    font-size: 13px;
    color: var(--color-text-muted);
  }
  
  .download-variants {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .download-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .download-btn:hover {
    background: var(--gradient-primary);
    border-color: transparent;
    color: white;
    transform: translateY(-2px);
  }
  
  .download-note {
    text-align: center;
    padding: 24px;
    background: var(--color-bg-card);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }
  
  .download-note p {
    font-size: 14px;
    color: var(--color-text-secondary);
    margin: 8px 0;
  }
  
  .download-note .api-notice {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: rgba(251, 191, 36, 0.1);
    border: 1px solid rgba(251, 191, 36, 0.25);
    border-radius: 8px;
    color: #fbbf24;
    margin-bottom: 16px;
  }
  
  .download-note .api-notice strong {
    color: #fbbf24;
  }
  
  .download-note .api-notice svg {
    flex-shrink: 0;
  }
  
  .download-note strong {
    color: var(--color-text-primary);
  }
  
  @media (max-width: 768px) {
    .download-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

