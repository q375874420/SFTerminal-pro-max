  }
  
  .hero-screenshot {
    position: relative;
    max-width: 980px;
    margin: 0 auto;
    perspective: 1000px;
  }
  
  .screenshot-frame {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.3), rgba(59, 130, 246, 0.3), rgba(139, 92, 246, 0.3));
    padding: 2px;
    box-shadow: 
