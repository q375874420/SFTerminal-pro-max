    <script>
      // 轮播逻辑
      const carouselContainer = document.querySelector('.hero-screenshot');
      const carousel = document.getElementById('carousel');
      const slides = document.querySelectorAll('.screenshot-carousel .slide');
      const indicators = document.querySelectorAll('.carousel-indicators .indicator');
      const slideTitle = document.getElementById('slideTitle');
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      let currentIndex = 0;
      let intervalId: ReturnType<typeof setInterval>;
      let isPaused = false;
      
      function showSlide(index: number, direction: 'left' | 'right' = 'right') {
        const currentSlide = slides[currentIndex] as HTMLElement;
        const nextSlide = slides[index] as HTMLElement;
        
        // 设置动画方向
        carousel?.setAttribute('data-direction', direction);
        
        // 移除所有状态类
        slides.forEach(slide => {
          slide.classList.remove('active', 'exit-left', 'exit-right', 'enter-left', 'enter-right');
        });
        
        // 当前幻灯片退出动画
        if (direction === 'right') {
          currentSlide.classList.add('exit-left');
          nextSlide.classList.add('enter-right');
        } else {
          currentSlide.classList.add('exit-right');
          nextSlide.classList.add('enter-left');
        }
        
        // 延迟后设置为 active
        setTimeout(() => {
          slides.forEach(slide => {
            slide.classList.remove('exit-left', 'exit-right', 'enter-left', 'enter-right');
          });
          nextSlide.classList.add('active');
        }, 500);
        
        // 更新指示器
        indicators.forEach((ind, i) => {
          ind.classList.toggle('active', i === index);
        });
        
        // 更新标题
        const title = nextSlide.getAttribute('data-title') || '';
        if (slideTitle) {
          slideTitle.textContent = title;
        }
        
        currentIndex = index;
      }
      
      function nextSlide() {
        const next = (currentIndex + 1) % slides.length;
        showSlide(next, 'right');
      }
      
      function prevSlide() {
        const prev = (currentIndex - 1 + slides.length) % slides.length;
        showSlide(prev, 'left');
      }
      
      function startAutoPlay() {
        if (!isPaused) {
          intervalId = setInterval(nextSlide, 5000);
        }
      }
      
      function stopAutoPlay() {
        clearInterval(intervalId);
      }
      
      function resetAutoPlay() {
        stopAutoPlay();
        startAutoPlay();
      }
      
      // 鼠标悬浮暂停
      carouselContainer?.addEventListener('mouseenter', () => {
        isPaused = true;
        stopAutoPlay();
      });
      
      carouselContainer?.addEventListener('mouseleave', () => {
        isPaused = false;
        startAutoPlay();
      });
      
      // 点击指示器切换
      indicators.forEach((indicator) => {
        indicator.addEventListener('click', () => {
          const index = parseInt(indicator.getAttribute('data-index') || '0');
          const direction = index > currentIndex ? 'right' : 'left';
          showSlide(index, direction);
          resetAutoPlay();
        });
      });
      
      // 左右按钮切换
      prevBtn?.addEventListener('click', () => {
        prevSlide();
        resetAutoPlay();
      });
      
      nextBtn?.addEventListener('click', () => {
        nextSlide();
        resetAutoPlay();
      });
      
      // 开始自动轮播
      startAutoPlay();
    </script>
  </div>
